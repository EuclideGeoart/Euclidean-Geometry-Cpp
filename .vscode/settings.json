            "CMAKE_C_COMPILER": "C:/msys64/clang64/bin/clang.exe",
            "CMAKE_CXX_COMPILER": "C:/msys64/clang64/bin/clang++.exe",
            "CMAKE_MAKE_PROGRAM": "C:/msys64/clang64/bin/ninja.exe"
        },
        "C_Cpp.default.compilerPath": "C:/msys64/clang64/bin/clang++.exe",
        "C_Cpp.default.intelliSenseMode": "windows-clang-x64"
    },
    "[linux]": {
        "cmake.buildDirectory": "${workspaceFolder}/build-linux-Debug",
        // "cmake.generator": "Ninja", // Already set globally, but fine to repeat
        "cmake.configureSettings": {
            "CMAKE_BUILD_TYPE": "Debug",
            "CMAKE_CXX_COMPILER": "clang++", // Let CMake find them in PATH or rely on Kit
