{
    "version": "2.0.0",
    "tasks": [
        // --- Windows Clang64 Tasks (Corrected for PowerShell) ---
        {
            "label": "Create Windows Clang64 Build Directory",
            "type": "shell",
            "command": "echo \"This task is intended for Windows. On non-Windows, it does nothing or uses this placeholder.\"",
            "windows": {
                "command": "if (-not (Test-Path -Path \"${workspaceFolder}\\build\" -PathType Container)) { New-Item -ItemType Directory -Path \"${workspaceFolder}\\build\" | Out-Null }"
            },
            "problemMatcher": []
        },
        {
            "label": "Configure Windows Clang64 Build",
            "type": "shell",
            "windows": {
                "command": "Push-Location \"${workspaceFolder}\\build\"; cmake .. -G Ninja -DCMAKE_BUILD_TYPE=Debug -DCMAKE_C_COMPILER=C:/msys64/clang64/bin/clang.exe -DCMAKE_CXX_COMPILER=C:/msys64/clang64/bin/clang++.exe -DCMAKE_MAKE_PROGRAM=C:/msys64/clang64/bin/ninja.exe; Pop-Location"
            },
            "dependsOn": [
                "Create Windows Clang64 Build Directory"
            ],
            "problemMatcher": []
        },
        {
            "label": "Build Windows Clang64 Debug",
            "type": "shell",
            "windows": {
                // Using Push-Location for robustness, or use ; to separate cd and ninja
                "command": "Push-Location \"${workspaceFolder}\\build\"; C:/msys64/clang64/bin/ninja.exe; Pop-Location"
            },
            "dependsOn": [
                "Configure Windows Clang64 Build"
            ],
            "group": {
                "kind": "build",
                "isDefault": true // This makes it the default for Ctrl+Shift+B on Windows
            },
            "problemMatcher": {
                "base": "$gcc"
            }
        },
        {
            "label": "Build and Run Windows Clang64 Debug",
            "type": "shell",
            "windows": {
                "command": "Start-Process",
                "args": [
                    "cmd.exe",
                    "-ArgumentList",
                    "/k, \"cd /d \\\"${workspaceFolder}\\build\\\" && ninja.exe && GeometryTool2.exe\""
                ]
            },
            "dependsOn": [
                "Build Windows Clang64 Debug"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "presentation": {
                "reveal": "silent"
            },
            "problemMatcher": [],
            "group": "test"
        },
        // --- Linux Tasks (Ensure "isDefault" is false if Windows is default) ---
        {
            "label": "Create Linux Build Directory",
            "type": "shell",
            "command": "mkdir -p ${workspaceFolder}/build-linux-debug", // This is fine for Linux
            "problemMatcher": []
        },
        {
            "label": "Configure Linux Build",
            "type": "shell",
            "command": "cd ${workspaceFolder}/build-linux-debug && cmake .. -G Ninja -DCMAKE_BUILD_TYPE=Debug -DCMAKE_CXX_COMPILER=clang++ -DCMAKE_C_COMPILER=clang -DCGAL_HAS_THREADS=ON", // Fine for Linux
            "dependsOn": [
                "Create Linux Build Directory"
            ],
            "problemMatcher": []
        },
        {
            "label": "Build Linux Debug",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build",
                "build",
                "--config",
                "Debug"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": "$gcc",
            "dependsOn": "Configure Linux Debug"
        },
        {
            "label": "Build Linux Debug with Sanitizers",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build",
                "build",
                "--config",
                "Debug"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": "$gcc",
            "dependsOn": "Configure Linux Debug with Sanitizers"
        },
        {
            "label": "Configure Linux Debug",
            "type": "shell",
            "command": "cmake",
            "args": [
                "-S",
                ".",
                "-B",
                "build",
                "-G",
                "Ninja",
                "-DCMAKE_BUILD_TYPE=Debug",
                "-DCMAKE_CXX_FLAGS=-g -O1"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": "$gcc"
        },
        {
            "label": "Configure Linux Debug with Sanitizers",
            "type": "shell",
            "command": "cmake",
            "args": [
                "-S",
                ".",
                "-B", 
                "build",
                "-G",
                "Ninja",
                "-DCMAKE_BUILD_TYPE=Debug",
                "-DCMAKE_CXX_FLAGS=-fsanitize=address -fsanitize=undefined -fno-omit-frame-pointer -g -O1",
                "-DCMAKE_EXE_LINKER_FLAGS=-fsanitize=address -fsanitize=undefined"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": "$gcc"
        },
        {
            "label": "Run Linux Build",
            "type": "shell",
            "command": "${workspaceFolder}/build-linux-debug/GeometryTool2",
            "dependsOn": [
                "Build Linux Debug"
            ],
            "problemMatcher": []
        }
    ]
}